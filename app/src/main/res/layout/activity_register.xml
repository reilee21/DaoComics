<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login_register.RegisterActivity"
    android:background="@drawable/imgsignup"
    >
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="#00000000"
        android:id="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="back"
        android:layout_marginTop="24dp"
        android:padding="8dp"
   />
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#23827E7E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="60dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_marginBottom="28dp"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Đăng ký"
              android:textSize="28sp"
              android:textColor="#A2D2FF"
              android:fontFamily="@font/poppins"
              android:layout_gravity="center"
              android:layout_marginTop="24dp"
              android:layout_marginBottom="24dp"
              />

          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Họ tên"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterName"
              android:layout_marginBottom="16dp"
              />
          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Tài khoản"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterUserName"
              android:layout_marginBottom="16dp"
              />
          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Mật khẩu"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterUserPassWord"
              android:layout_marginBottom="16dp"
              android:inputType="textPassword"
              />
          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Nhập lại mật khẩu"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterRePassWord"
              android:layout_marginBottom="16dp"
              android:inputType="textPassword"
              />
          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Số điện thoại"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterUserPhoneNb"
              android:layout_marginBottom="16dp"
              />
          <EditText
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/input"
              android:hint="Email"
              android:paddingLeft="16dp"
              android:textColor="@color/black"
              android:textColorHint="#DF808080"
              android:id="@+id/edRegisterEmail"
              android:layout_marginBottom="16dp"
              />
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              >
              <ImageButton
                  android:layout_width="180dp"
                  android:layout_height="60dp"
                  android:id="@+id/btnCreateUS"
                  android:src="@drawable/buttongradient"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:contentDescription="TODO" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Đăng ký"
                  android:textColor="@color/white"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="@+id/btnCreateUS"
                  app:layout_constraintStart_toStartOf="@+id/btnCreateUS"
                  app:layout_constraintTop_toTopOf="@+id/btnCreateUS"
                  android:fontFamily="@font/poppins"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  />

          </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>